<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/splash_bg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_correct"
                android:layout_margin="@dimen/_5sdp"/>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/varification"
            android:fontFamily="@font/en"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="@string/enter_verification_code"
            android:fontFamily="@font/en"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                app:cardCornerRadius="50dp"
                android:elevation="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                >

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/codeEditText"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:inputType="number"
                    android:singleLine="true"
                    android:maxLength="1"
                    android:gravity="center"
                    android:background="@drawable/back_circle"
                    android:visibility="visible"
                    android:layout_gravity="center"
                     />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                app:cardCornerRadius="50dp"
                android:layout_marginRight="@dimen/_15sdp"
                android:elevation="@dimen/_15sdp"
                >

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:inputType="number"
                    android:singleLine="true"
                    android:background="@drawable/back_circle"
                    android:visibility="visible"
                    android:maxLength="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                     />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                app:cardCornerRadius="50dp"
                android:elevation="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                >

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:inputType="number"
                    android:singleLine="true"
                    android:background="@drawable/back_circle"
                    android:visibility="visible"
                    android:maxLength="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                     />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                app:cardCornerRadius="50dp"
                android:elevation="@dimen/_15sdp"
                >

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:inputType="number"
                    android:singleLine="true"
                    android:background="@drawable/back_circle"
                    android:visibility="visible"
                    android:maxLength="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/resent"
            android:fontFamily="@font/en"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="20dp"
            android:id="@+id/verifyButton"
            android:text="@string/continue_text"
            android:fontFamily="@font/en"
            android:textColor="@color/colorWhite"
            android:background="@drawable/language_rounded_rectangle_with_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
